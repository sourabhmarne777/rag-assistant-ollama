# Qdrant Cloud Configuration (Required)
# Get these from https://qdrant.tech/ - Free tier: 1GB storage, 1M vectors
QDRANT_URL=https://your-cluster-url.qdrant.tech:6333
QDRANT_API_KEY=your_qdrant_api_key_here
COLLECTION_NAME=rag_documents

# Ollama Configuration (Local AI Models)
# Make sure Ollama is running: ollama serve
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
EMBEDDING_MODEL=nomic-embed-text

# Text Processing Settings
MAX_TEXT_LENGTH=15000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Search Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3

# Storage Management
FREE_TIER_LIMIT=1000000
STORAGE_WARNING_THRESHOLD=80
STORAGE_CRITICAL_THRESHOLD=90